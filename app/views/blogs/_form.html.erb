<%= form_with(model: @blog, local: true, url: choose_new_or_edit ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_title">
    <%= form.label :title %>
  </div>  
  <div class="blog_title">    
    <%= form.text_field :title %>
  </div>
  
  <div class="blog_title">
    <%= form.label :content %>
  </div>    
  <div class="blog_title">    
    <%= form.text_area :content, :size => "30x4" %>
  </div>
  
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, id: :blog_image %> <!-- file_field(オブジェクト名,プロパティ名 [, オプション]) --!>
    <%= form.hidden_field :image_cache %>　<!--確認画面から新規作成画面に戻った時に情報を保持するための記述--!>
  </div>
  
  <%= form.submit "create my blog", :class=>"btn btn-primary" %>
<% end %>
<br>
<%= link_to "Back to Blog list", blogs_path %>