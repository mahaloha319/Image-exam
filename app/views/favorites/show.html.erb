<h1>お気に入り!</h1>

<% if @favorite_blogs.present? %>
  <div>
    <% @favorite_blogs.each do |t| %>
      <p>名前：<%= t.user.name %>さん</p>
      <p>タイトル：<%= t.title %></p>
      <p>内容：<%= t.content %></p>
      <%= link_to 'お気に入り解除する', favorite_path(blog_id: t.id), method: :delete, class: 'btn btn-danger' %>
      <% end %>
  </div>
<% end %>